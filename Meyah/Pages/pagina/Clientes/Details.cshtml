@page
@model Meyah.Pages.pagina.Clientes.DetailsModel
@{
    Layout = "../Shared/Diseño_Layout";
}
<a class="hidden">@Model.Cliente.clienteId</a>       
<h1 class="text-center">Detalles Cliente</h1>
<br />

    
<form class="mt-3" method="post">

    <div class="col-md-5"></div>
    <a class="btn btn-info m-2" href="/pagina/Clientes/Edit?id=@Model.Cliente.clienteId"> Editar</a> |
    <input class="btn btn-danger m-2 " id="Submit1" type="submit" name="button" value="Eliminar" />
    <div class="col-md-5"></div>
    <br />

    

    <div class="form-group">
        <div class="col-md-6">
            <label for="nombreProducto"><strong>Nombre:</strong></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" value="@Model.Cliente.nombrecl" disabled="disabled">
            <span class="text-danger"></span>
        </div>

        <div class=" col-md-6">
            <label for="exampleFormControlInput1"><strong>Apellido:</strong></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" value="@Model.Cliente.apellidocl" disabled="disabled">
            <span class="text-danger"></span>
        </div>
        <br />
        <br />
        <br />

    </div>
    

    <div class="form-row">

        <div class="form-group col-md-4">
            <label><strong>Dirección:</strong></label>
            <input type="text" class="form-control" value="@Model.Cliente.direccion" disabled="disabled" />
            <span class="text-danger"></span>
        </div>
        
       

        <div class="form-group col-md-4">
            <label><strong>Teléfono:</strong></label>
            <input type="text" class="form-control" value="@Model.Cliente.telefono" disabled="disabled" />
            <span class="text-danger"></span>
        </div>
        

        <div class="form-group col-md-4">
            <label><strong>Fecha de nacimiento:</strong></label>
            <input type="text" class="form-control" value="@Model.Cliente.nacimiento.ToShortDateString()" disabled="disabled" />
            <span class="text-danger"></span>
        </div>
        

    </div>
    

    <div class="form-group">

        <div class=" col-md-6">
            <label for="nombreProducto"><strong>Fecha de registro:</strong></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" value="@Model.Cliente.creado.ToShortDateString()" disabled="disabled">
            <span class="text-danger"></span>
        </div>
        <br />
    

        <div class="col-md-6">
            <label for="exampleFormControlInput1"><strong>Fecha de modificación:</strong></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" value="@Model.Cliente.modificado" disabled="disabled">
            <span class="text-danger"></span>
        </div>
        <br />
        <br />
        <br />
    </div>
    



</form>
    
