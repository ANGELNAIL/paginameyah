@page
@model Meyah.Pages.pagina.Empleados.CreateModel
@{
    Layout = "../Shared/Diseño_Layout";
}

<h1 class="text-center">Registrar Empleado</h1>
<body>

    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <div class=" col">
                    <label asp-for="empleado.nombreemp" for="nombreProducto"><strong>Nombre:</strong></label>
                    <input asp-for="empleado.nombreemp" type="text" class="form-control">
                </div>
                <div class=" col">
                    <label asp-for="empleado.apellidoem" for="exampleFormControlInput1"><strong>Apellido:</strong></label>
                    <input asp-for="empleado.apellidoem" type="text" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class=" col">
                    <label asp-for="empleado.telefono"><strong>Teléfono:</strong></label>
                    <input asp-for="empleado.telefono" type="text" class="form-control" minlength="10" maxlength="10" title="El numero de telefonico debe contener 10 digitos" />
                    <span class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="empleado.fechanacimiento"><strong>Fecha de nacimiento:</strong></label>
                    <input asp-for="empleado.fechanacimiento" type="datetime-local" class="form-control">
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col">
                <input asp-for="empleado.usuarioId" value="1" class="hidden">
                <span class="text-danger"></span>
            </div>

            <div class="col-md-5"></div>
                <button class="btn btn-success " type="submit" value="Agregar"> Agregar</button> |
                <button type="submit" class="btn btn-danger" asp-page="/pagina/Empleados/Index">Cancelar</button>
            <div class="col-md-5"></div>

        </form>
    </div>
    
</body>
