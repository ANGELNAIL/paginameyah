@page
@model Meyah.Pages.pagina.Empleados.DeleteModel
@{
    Layout = "../Shared/Diseño_Layout";
}

<h1 class="text-center">Eliminar Empleado</h1>
<body>
   
    <form>

        <div class="col-md-1"></div>
        <div class="center col-md-6 col-lg-5">
            <button type="submit" class="btn btn-warning " asp-page="/pagina/Empleados/Details">Eliminar</button>

        </div>

        <div class="centered col-xs-12 col-md-6 col-lg-5">
            <button type="submit" class="btn btn-danger " asp-page="/pagina/Empleados/Index">Cancelar</button>
        </div>
        <div class="col-md-1"></div>

        <div class="form-row">
            <div class=" form-group col-md-12">
                <label for="nombreProducto">Nombre del Empleado</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
            </div>

            <div class="form-group col-md-12">
                <label for="exampleFormControlInput1">Apellido del Empleado</label>
                <input type="text" class="form-control" id="exampleFormControlInput1">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Teléfono:</label>
                <input type="text" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Fecha de Nacimiento:</label>
                <input type="date" class="form-control" />
                <span class="text-danger"></span>
            </div>
        </div>

        <!--
        <div class="col py-3 px-lg-5 border bg-light"> <button type="submit" class="btn btn-round btn-warning col-lg-3">Eliminar</button></div>
      <div class="col py-3 px-lg-5 border bg-light"><button type="submit" class="btn btn-round btn-danger col-lg-3">Cancelar</button></div>-->

    </form>
    
</body>

<style>
    .btn-warning {
        align-content: center;
    }
</style>