@page
@model Meyah.Pages.pagina.Tareas.EditModel
@{
    Layout = "../Shared/Diseño_Layout";
}
<h1 class="hide">@Model.tarea.tareaId</h1>
<h1 class="text-center">Editar Tarea</h1>
<body>
    <form method="post">

        <div class="col-md-7"></div>
            <input class="btn btn-info " name="button" type="submit" value="Actualizar" /> |
            <a type="submit" class="btn btn-danger" href="/pagina/Index">Cancelar</a>
        <div class="col-md-7"></div>


        <div class="form-row">
            <div class=" form-group col-md-12">
                <label asp-for="tarea.descripcion"><strong>Descripción:</strong></label>
                <textarea class="form-control" asp-for="tarea.descripcion" rows="5" cols="20" placeholder="@Model.tarea.descripcion"></textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="tarea.fechainicio"><strong>Fecha de Inicio:</strong></label>
                <input type="datetime-local" class="form-control" asp-for="tarea.fechainicio" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="tarea.fechaentrega"><strong>Fecha de Entrega:</strong></label>
                <input type="datetime-local" class="form-control" asp-for="tarea.fechaentrega" />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class=" form-group col-md-6">
                <label asp-for="tarea.pedidoId"><strong>Fecha de pedido:</strong></label>
                <select class="custom-select  form-control" asp-for="tarea.pedidoId" asp-items="@(new SelectList(Model.PedidoList, "pedidoId","fechapedido"))">
                    <option>Selecciona el Producto</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="tarea.empleadoId"><strong>Empleado ID:</strong></label>
                <select class="custom-select  form-control" asp-for="tarea.empleadoId" asp-items="@(new SelectList(Model.EmpleadoList, "empleadoId", "nombreemp"))">
                    <option>Selecciona el Producto</option>
                </select>
            </div>
        </div>

    </form>   
</body>