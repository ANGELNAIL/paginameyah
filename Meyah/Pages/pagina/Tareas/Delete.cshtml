@page
@model Meyah.Pages.pagina.Tareas.DeleteModel
@{
    Layout = "../Shared/Diseño_Layout";
}


<h1 class="text-center">Eliminar Tarea</h1>
<body>
    <div class="col-md-3"></div>
    <form>
        <div class="form-row">
            <div class=" form-group col-md-12">
                <label for="nombreProducto">Descripción</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
            </div>

        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Fecha de Inicio</label>
                <input type="datetime-local" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Fecha de Entrega</label>
                <input type="datetime-local" class="form-control" />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="center col-md-6 col-lg-5">
            <button type="submit" class="btn btn-round btn-warning btn-block" asp-page="/pagina/Tareas/Details">Eliminar</button>

        </div>

        <div class="centered col-xs-12 col-md-6 col-lg-5">
            <button type="submit" class="btn btn-round btn-danger btn-block" asp-page="/pagina/Tareas/Index">Cancelar</button>
        </div>
        <div class="col-md-1"></div>
        <!--
            <div class="col py-3 px-lg-5 border bg-light"> <button type="submit" class="btn btn-round btn-warning col-lg-3">Eliminar</button></div>
          <div class="col py-3 px-lg-5 border bg-light"><button type="submit" class="btn btn-round btn-danger col-lg-3">Cancelar</button></div>-->

    </form>
    <div class="col-md-3"></div>
</body>