@page
@model Meyah.Pages.pagina.Productos.EditModel
@{
    Layout = "../Shared/Diseño_Layout";
}
<h1 class="hide">@Model.Producto.productoId</h1>
<h1 class="text-center">Editar Producto</h1>
<body>
    <form method="post">

        <div class="col-md-5"></div>
            <input class="btn  btn-info" type="button" data-toggle="modal" data-target="#myModal" value="Guardar"> |
            <button type="submit" class="btn btn-danger " asp-page="/pagina/Index">Cancelar</button>
        <div class="col-md-5"></div>

        <label class="control-label"></label>
        <input asp-for="@Model.Producto.productoId" type="text" value="@Model.Producto.productoId" class="hide" />

        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Alerta</h4>
                    </div>
                    <div class="modal-body">
                        ¿Desea actualizar el producto: "@Model.Producto.nombreprod"?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" data-dismiss="modal">Guardar</button> | 
                        <input class="btn btn-danger" name="button" type="submit" value="Cancelar" />
                    </div>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-6">
                <label asp-for="@Model.Producto.nombreprod" class="control-label"><strong>Nombre del Producto:</strong></label>
                <input asp-for="@Model.Producto.nombreprod" type="text" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label asp-for="@Model.Producto.precio" class="control-label"><strong>Precio:</strong></label>
                <input asp-for="@Model.Producto.precio" type="text" class="form-control" minlength="1" maxlength="8" required pattern="[1.0-9.9]{1,7}" title="Ingrese solo números.  mínimo: 1.  máximo: 7" />
            </div>
        </div>
       
    </form>
  
</body>